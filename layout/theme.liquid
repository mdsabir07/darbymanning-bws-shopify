<!doctype html>
<html>
<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  <link rel="stylesheet" href="https://use.typekit.net/eah1lkg.css">

  {{ content_for_header }} <!-- Header hook for plugins -->

  {{ 'style.css' | asset_url | stylesheet_tag }}
  {%- if request.page_type contains 'customers/' -%}
    <script src="{{ 'shopify_common.js' | shopify_asset_url }}" defer="defer"></script>
  {%- endif -%}
  <script src="{{ 'lazysizes.js' | asset_url }}" async="async"></script>
  {{ 'polyfills.js' | asset_url | script_tag }}
  {% if template contains 'product' or template contains 'collection' %}
    {{ '//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js' | script_tag }}
    {{ 'option_selection.js' | shopify_asset_url | script_tag }}
  {% endif %}
  {{ 'application.js' | asset_url | script_tag }}
</head>
<body class="template-{{ request.page_type | handle }}">

  {% section 'header' %}
  <main class="main" role="main">
    {{ content_for_layout }}
  </main>
  {% section 'pre-footer' %}
  {% section 'footer' %}
  {% if template contains 'collection' %}
  <script>
    Shopify.queryParams = {};
    if (location.search.length) {
      for (var aKeyValue, i = 0, aCouples = location.search.substr(1).split('&'); i < aCouples.length; i++) {
        aKeyValue = aCouples[i].split('=');
        if (aKeyValue.length > 1) {
          Shopify.queryParams[decodeURIComponent(aKeyValue[0])] = decodeURIComponent(aKeyValue[1]);
        }
      }
    }
    jQuery('#sort-by')
      .val('{{ collection.sort_by | default: collection.default_sort_by | escape }}')
      .bind('change', function() {
        Shopify.queryParams.sort_by = jQuery(this).val();
        location.search = jQuery.param(Shopify.queryParams).replace(/\+/g, '%20');
      });
  </script>
  {% endif %}
  {% if template contains 'product' %}
  <script>
    jQuery(function() {
      jQuery('.swatch :radio').change(function() {
        var optionIndex = jQuery(this).closest('.swatch').attr('data-option-index');
        var optionValue = jQuery(this).val();
        jQuery(this)
          .closest('form')
          .find('.single-option-selector')
          .eq(optionIndex)
          .val(optionValue)
          .trigger('change');
      });
    });
  </script>
  {% endif %}
</body>
</html>
