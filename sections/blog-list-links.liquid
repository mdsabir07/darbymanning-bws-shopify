<section class="o-grid  o-grid--p o-grid--edge">
	<div class="o-grid__item">
		<div class="u-pH-144 u-pH-48@s">
			<div class="o-grid">
				{% for block in section.blocks %}
					{%- assign blog = blogs[block.settings.blog] -%}
					<div class="o-grid__item u-mB-16 u-size-12 {% if forloop.length == 4 %}u-size-3@m{% elsif forloop.length == 6 %} u-size-4@m{% else %}u-size-4@m{% endif %} u-size-6 u-size-4@s">
						<a href="{{ blog.url }}" class="button u-size-12 section-buttons__button">{{ blog.title }}</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>

{% schema %}
{
  "name": "Links",
  "blocks": [
    {
      "type": "blog",
      "name": "Links",
      "settings": [
        {
          "label": "Blog",
          "id": "blog",
          "type": "blog"
        }
      ]
    }
  ]
}
{% endschema %}
