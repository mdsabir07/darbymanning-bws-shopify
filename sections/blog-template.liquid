<section>

	{% paginate blog.articles by 11 %}
	
	<div class="o-grid u-justifyCenter u-pV-40">
	
		<div class="u-size-12 u-size-10@m u-grid__item u-mB-48">
	
			{% include "collection-buttons", blog: blog %}
			
		</div>
	
	</div>

	<div class="o-grid blog-grid-view">
	  {% for article in blog.articles %}
	  {% assign handle = forloop.index %}
	  {% case handle %}
	  {% when 1 %}
	  {% assign width = 'u-size-6@s  u-size-6@m  u-size-3@l' %}
	  {% when 2 %}
	  {% assign width = 'u-size-6@s  u-size-6@m  u-size-6@l' %}
	  {% when 3 %}
	  {% assign width = 'u-size-6@s  u-size-6@m  u-size-3@l' %}
	  {% when 4 %}
	  {% assign width = 'u-size-6@s  u-size-6@m  u-size-3@l' %}
	  {% when 5 %}
	  {% assign width = 'u-size-6@s  u-size-6@m  u-size-3@l' %}
	  {% when 6 %}
	  {% assign width = 'u-size-6@s  u-size-6@m  u-size-6@l' %}
	  {% when 7 %}
	  {% assign width = 'u-size-6@s  u-size-6@m  u-size-6@l' %}
	  {% when 8 %}
	  {% assign width = 'u-size-6@s  u-size-6@m  u-size-6@l' %}
	  {% when 9 %}
	  {% assign width = 'u-size-6@s  u-size-6@m  u-size-6@l' %}
	  {% when 10 %}
	  {% assign width = 'u-size-6@s  u-size-6@m  u-size-3@l' %}
	  {% when 11 %}
	  {% assign width = 'u-size-6@s  u-size-6@m  u-size-3@l' %}
	  {% endcase %}
	    <div class="o-grid__item u-size-12 {{width}} u-mB-48 u-flex">
	      {% include 'blog-card-grid', article: article, blog: blog %}
	    </div>
	  {% endfor %}
	</div>

	{%- if paginate.pages > 1 -%}
	  {% include 'pagination', paginate: paginate %}
	{%- endif -%}
	
	{% endpaginate %}
	
</section>


{% schema %}
{
  "name": "Blog Category",
  "settings": [
    {
        "type": "link_list",
        "id": "col_nav_bottom",
        "label": "Button Bar Navigation"
    }
  ]
}
{% endschema %}