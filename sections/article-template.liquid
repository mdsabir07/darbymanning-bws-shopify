<article>
<div class="blog-hero">
    <div class="o-grid  o-grid--item">
        <div class="blog__hero">       		        	         
            <div class="block  block--row border">                
                <div class="block__col blog__hero__col u-wrap">
                  <div class="block__info  block__info--light-gray  block__info--large blog__hero__content" style="background-color : {{section.settings.text_block_bg}}; color: {{section.settings.text_color}};">                    
                    <p class="block__message block__message--default"><span>{{blog.title}} </span></p>
                    <h2 class="article__title nimbus u-textCaps">{{ article.title }}</h2>                                                                               
                  </div> 

                {% if section.settings.blog_show_author %}
                <div class="u-alignSelfEnd">
                    <p class="article__date">{{ article.published_at | date: "%B %d %Y" }}</p>
                    <p class="article__author">{{ 'blogs.article.by_author' | t: author: article.author }}</p>
                </div>
                {% endif %}
                </div>
                <div class="block__col blog__hero__img">
                    {% if article.image %}
                        {%- assign img_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                        <img
                        class="article__grid-image lazyload lazypreload"
                        src="{{ article.image | img_url: 'master' }}"
                        data-src="{{ img_url }}"
                        data-sizes="auto"
                        alt="{{ article.image.alt | escape }}">              
                        <noscript>
                        <div class="article__grid-image-wrapper">
                        {{ article | img_url: '345x345', scale: 2 | img_tag: article.title, 'article__grid-image' }}
                        </div>
                        </noscript>
                    {% else %}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg article__grid-image' }}
                    {% endif %}
                </div>
                                    
            </div>
        </div>     
    </div>              
</div>
<div class="article-content u-mV-48">
    <div class="o-grid">
        <div class="o-grid--item u-flex u-alignCenter">
            <div class="u-size-8@m">
                {{article.content}}
            </div>
        </div>
    </div>
    {% if section.settings.show_share_buttons %}
        {% include 'social-sharing', share_title: article.title, share_permalink: article.url, share_image: article.image %}
    {% endif %}  
</div>
</article>

