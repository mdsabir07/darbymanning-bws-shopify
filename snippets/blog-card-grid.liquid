<div class="block block--slide border block--shadow">
    <a href="{{ article.url }}">
        <div class="block__img block__img--transparent" data-image-loading-animation>
        	<p class="block__message  block__message--blue"><span>{{blog.title}} </span> | <span>{{ article.published_at | time_tag: '%d %b' }}</span></p>
        	<div class="block__wrap">
	            {%- assign img_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
	            <img
	            class="lazyload lazypreload"
	            data-src="{{ img_url }}"
	            data-sizes="auto"
	            alt="{{ preview_image.alt | escape }}">  
	        </div>
        </div>
        <article class="block__info block__info--flexed">   
            <h4 class="block__title block__title--small">{{ article.title }}</h4>                             
            <div class="block__p">
            	{% if article.excerpt.size > 0 %}
                    {{ article.excerpt }}
                  {% else %}
                   {{ article.content | strip_html | truncate: 80 }}
                  {% endif %}
            </div>
        </article>
    </a>
</div>