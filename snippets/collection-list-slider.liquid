{% assign collection_handle = section.settings.col_nav %}
{% if linklists[collection_handle].handle != blank %}
<section class="o-grid  collection-list">
    {% for link in linklists[collection_handle].links %}
    {% if link.type == 'collection_link' %}
    {% assign linkCollection = link.object %}
     <article class="o-grid__item  o-grid--small-item  u-size-1@m">
        <div class="block  border  border--top">
            <div class="block__info  block__info--small  block__info--center  collection-list__wrap">
                <div class="collection-list__img">
                {% if linkCollection.image %}
                <img src="{{ linkCollection.image.src | collection_img_url: 'large' }}" alt="{{ linkCollection.title | escape  }}" />
                {% else %}
                    <img src="{{ linkCollection.products.first.featured_image.src | product_img_url: 'large' }}" alt="{{ linkCollection.title | escape  }}" />
                {% endif %}
                </div>
                <h4 class="collection-list__title caps h-light"><a href="{{ link.url }}">{{ link.title }}</a></h4>
            </div>
        </div>
    </article>
    {% endif %}
    {% endfor %}
</section>
{% endif %}
